{
  "name": "aptos-web3-hackathon",
  "version": "1.0.0",
  "description": "Aptos blockchain Web3 project for hackathon with Move smart contracts and TypeScript SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:advanced": "jest tests/advanced-features.test.ts",
    "test:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:advanced",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "compile-contracts": "aptos move compile --package-dir contracts",
    "test-contracts": "aptos move test --package-dir contracts",
    "deploy:testnet": "node scripts/deploy-testnet.js",
    "deploy:mainnet": "node scripts/deploy-mainnet.js",
    "setup": "npm install && npm run build",
    "clean": "rm -rf dist node_modules",
    "verify": "npm run build && npm run test:all && echo 'âœ… All tests passed!'"
  },
  "dependencies": {
    "@aptos-labs/ts-sdk": "^1.18.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "aptos",
    "blockchain",
    "web3",
    "move",
    "smart-contracts",
    "typescript",
    "hackathon"
  ],
  "author": "Hackathon Team",
  "license": "MIT"
}
